<Window x:Class="ChuckNorrisJokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChuckNorrisJokes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="chucknorris.jpg"/>
        </Grid.Background>
        <ComboBox x:Name="cboJokeCategories" HorizontalAlignment="Left" Margin="146,150,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboJokeCategories_SelectionChanged"/>
        <Button x:Name="btnSelectMe" Content="SELECT" HorizontalAlignment="Left" Margin="166,199,0,0" VerticalAlignment="Top" Width="75" Click="btnSelectMe_Click"/>
        <Label x:Name="lblCategories" Content="Joke Category" HorizontalAlignment="Left" Height="29" Margin="43,150,0,0" VerticalAlignment="Top" Width="122" Foreground="#FFFBF9F9"/>
        <TextBox x:Name="tboJokeOutput" HorizontalAlignment="Left" Height="107" Margin="552,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193"/>
        <Label x:Name="lblTitle" Content="Chuck Norris Joke Selector" HorizontalAlignment="Left" Height="32" Margin="60,52,0,0" VerticalAlignment="Top" Width="206" Foreground="#FFFBF9F9"/>

    </Grid>
</Window>
